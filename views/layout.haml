!!!
%html{:lang => "en-GB"}
  %head
    %meta{:charset => "utf-8"}
    %title LordsWhip
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %link{:href => "css/bootstrap.min.css", :rel => "stylesheet"}
    %style
      body {padding: 3%;}
    %script{:src => "http://code.jquery.com/jquery.js"}
    %script{:src => "js/bootstrap.min.js"}
    - if @editing
      %style
        div#editor {width: 45%; float: left; clear: left; margin-right: 8%;}
        div#pdf-viewer {width: 45%, float: left; clear: right;}
        canvas#the-canvas {border: 1px solid black;}
      %script{:src => "js/pdf-demo.js"}
      %script{:src => "js/pdfjs/shared/util.js"}
      %script{:src => "js/pdfjs/shared/colorspace.js"}
      %script{:src => "js/pdfjs/shared/pattern.js"}
      %script{:src => "js/pdfjs/shared/function.js"}
      %script{:src => "js/pdfjs/shared/annotation.js"}
      %script{:src => "js/pdfjs/display/api.js"}
      %script{:src => "js/pdfjs/display/metadata.js"}
      %script{:src => "js/pdfjs/display/canvas.js"}
      %script{:src => "js/pdfjs/display/font_loader.js"}
      %script
        PDFJS.workerSrc = 'js/pdfjs/worker_loader.js';
      %script{:src => "js/pdf-demo.js"}
  %body
    .container
      .row
        %nav.navbar.navbar-inverse.navbar-static-top
          .navbar-header
            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "#"} Title
          .collapse.navbar-collapse
            %ul.nav.navbar-nav
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
            %form.navbar-form.navbar-left{:role => "search"}
              .form-group
                %input.form-control{:placeholder => "Search", :type => "text"}/
              %button.btn.btn-default{:type => "submit"} Submit
            %ul.nav.navbar-nav.navbar-right
              %li
                %a{:href => "#"} Link
              
  
        %h1.page-header
          LordsWhip
          %small
            Prototype
        %ul.nav.nav-pills.lead
          %li
            %a{:href => "/"} Forthcoming Business
          %li
            %a{:href => "/edit-mockup"} Edit Mockup
          %li
            %a{:href => "/cal"} iCal    
          %li
            %a{:href => "/index.xml"} XML
          %li
            %a{:href => "/index.json"} JSON   
        =yield

- unless day.has_time_blocks?
  %h3.text-muted
    %time{datetime: true}
      = day.date.strftime("%A %e %B")
  .text-muted.lead
    = day.note
- else
  %h3
    %time{datetime: true}
      = day.date.strftime("%A %e %B")
  .row
    - day.time_blocks.each do |block|
      .col-md-4.lead
        =block.title
      .col-md-8.lead
        =block.note
        - block.business_items.each do |item|
          %p= item.description
%hr


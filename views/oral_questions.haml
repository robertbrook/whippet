%table.table.table-striped
  %thead
    %tr
      %th Date
      %th Questioner
      %th Text
      %th Answerer
      %th Department
  %tbody
    - @oral_questions.each do |oral_question|
      %tr
        %td= oral_question.date_string
        %td= oral_question.complete.match(/^(.*)(?:&nbsp;|\s)to ask Her Majesty/)[1]
        %td= oral_question.complete.split('.')[0].match(/s Government (.*)/).inspect
        %td= oral_question.answerer
        %td= oral_question.department
      %tr
        %td(colspan = '5')= oral_question.complete      